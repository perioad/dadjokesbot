{
  "name": "dadjokesbot",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "dadjokesbotPath": "src/lambdas/dadjokesbot",
    "sendjokesPath": "src/lambdas/send-jokes",
    "getjokePath": "src/lambdas/get-joke"
  },
  "scripts": {
    "build:dadjokesbot": "esbuild src/lambdas/dadjokesbot/index.ts --bundle --platform=node --outfile=src/lambdas/dadjokesbot/build/index.js",
    "build:sendjokes": "esbuild src/lambdas/send-jokes/index.ts --bundle --platform=node --outfile=src/lambdas/send-jokes/build/index.js",
    "build:getjoke": "esbuild src/lambdas/get-joke/index.ts --bundle --platform=node --outfile=src/lambdas/get-joke/build/index.js",
    "zip:getjoke:win": "if exist \"src\\lambdas\\get-joke\\build\\index.zip\" del \"src\\lambdas\\get-joke\\build\\index.zip\" & powershell -command \"& {param($file); Compress-Archive -Path $file -DestinationPath 'src\\lambdas\\get-joke\\build\\index.zip'}\" \"src\\lambdas\\get-joke\\build\\index.js\"",
    "zip:dadjokesbot:mac": "if [ -e \"src/lambdas/dadjokesbot/build/index.zip\" ]; then rm \"src/lambdas/dadjokesbot/build/index.zip\"; fi && zip -j \"src/lambdas/dadjokesbot/build/index.zip\" \"src/lambdas/dadjokesbot/build/index.js\"",
    "zip:sendjokes:mac": "if [ -e \"src/lambdas/send-jokes/build/index.zip\" ]; then rm \"src/lambdas/send-jokes/build/index.zip\"; fi && zip -j \"src/lambdas/send-jokes/build/index.zip\" \"src/lambdas/send-jokes/build/index.js\"",
    "push-to-aws:getjoke:win": "aws lambda update-function-code --function-name getjoke --zip-file fileb://src\\lambdas\\get-joke\\build\\index.zip",
    "push-to-aws:dadjokesbot:mac": "aws lambda update-function-code --function-name dadjokesbotV2 --zip-file fileb://src/lambdas/dadjokesbot/build/index.zip --no-verify-ssl",
    "push-to-aws:sendjokes:mac": "aws lambda update-function-code --function-name sendjokes --zip-file fileb://src/lambdas/send-jokes/build/index.zip --no-verify-ssl",
    "deploy:getjoke:win": "npm run build:getjoke && npm run zip:getjoke:win && npm run push-to-aws:getjoke:win",
    "deploy:dadjokesbot:mac": "npm run build:dadjokesbot && npm run zip:dadjokesbot:mac && npm run push-to-aws:dadjokesbot:mac",
    "deploy:sendjokes:mac": "npm run build:sendjokes && npm run zip:sendjokes:mac && npm run push-to-aws:sendjokes:mac"
  },
  "author": "perioad",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/types": "^3.329.0",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^20.2.1",
    "esbuild": "0.17.19",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.335.0",
    "@aws-sdk/client-lambda": "^3.421.0",
    "@aws-sdk/lib-dynamodb": "^3.335.0",
    "grammy": "^1.17.2",
    "lodash-es": "^4.17.21",
    "openai": "^3.2.1"
  }
}
