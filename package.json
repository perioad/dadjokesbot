{
  "name": "dadjokesbot",
  "version": "2.0.0",
  "description": "",
  "main": "dadjokesbot.js",
  "scripts": {
    "build": "esbuild src/bot/index.ts --bundle --platform=node --outfile=index.js",
    "zip:win": "if exist \"index.zip\" del \"index.zip\" & powershell -command \"& {param($file); Compress-Archive -Path $file -DestinationPath 'index.zip'}\" \"index.js\"",
    "zip:mac": "if [ -e \"index.zip\" ]; then rm \"index.zip\"; fi && zip \"index.zip\" \"index.js\"",
    "push-to-aws:win": "aws lambda update-function-code --function-name dadjokesbotV2 --zip-file fileb://index.zip",
    "push-to-aws:mac": "aws lambda update-function-code --function-name dadjokesbotV2 --zip-file fileb://index.zip --no-verify-ssl",
    "deploy:win": "npm run build && npm run zip:win && npm run push-to-aws:win",
    "deploy:mac": "npm run build && npm run zip:mac && npm run push-to-aws:mac"
  },
  "author": "perioad",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/types": "^3.329.0",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^20.2.1",
    "esbuild": "0.17.19",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.335.0",
    "@aws-sdk/lib-dynamodb": "^3.335.0",
    "grammy": "^1.17.2",
    "lodash-es": "^4.17.21",
    "openai": "^3.2.1"
  }
}
