{
  "name": "dadjokesbot",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "dadjokesbotPath": "src/lambdas/dadjokesbot",
    "sendjokesPath": "src/lambdas/send-jokes"
  },
  "scripts": {
    "build:dadjokesbot": "esbuild $npm_package_config_dadjokesbotPath/index.ts --bundle --platform=node --outfile=$npm_package_config_dadjokesbotPath/build/index.js",
    "build:sendjokes": "esbuild $npm_package_config_sendjokesPath/index.ts --bundle --platform=node --outfile=$npm_package_config_sendjokesPath/build/index.js",
    "zip:win": "if exist \"index.zip\" del \"index.zip\" & powershell -command \"& {param($file); Compress-Archive -Path $file -DestinationPath 'index.zip'}\" \"index.js\"",
    "zip:dadjokesbot:mac": "if [ -e \"$npm_package_config_dadjokesbotPath/build/index.zip\" ]; then rm \"$npm_package_config_dadjokesbotPath/build/index.zip\"; fi && zip -j \"$npm_package_config_dadjokesbotPath/build/index.zip\" \"$npm_package_config_dadjokesbotPath/build/index.js\"",
    "zip:sendjokes:mac": "if [ -e \"$npm_package_config_sendjokesPath/build/index.zip\" ]; then rm \"$npm_package_config_sendjokesPath/build/index.zip\"; fi && zip -j \"$npm_package_config_sendjokesPath/build/index.zip\" \"$npm_package_config_sendjokesPath/build/index.js\"",
    "push-to-aws:win": "aws lambda update-function-code --function-name dadjokesbotV2 --zip-file fileb://index.zip",
    "push-to-aws:dadjokesbot:mac": "aws lambda update-function-code --function-name dadjokesbotV2 --zip-file fileb://$npm_package_config_dadjokesbotPath/build/index.zip --no-verify-ssl",
    "push-to-aws:sendjokes:mac": "aws lambda update-function-code --function-name sendjokes --zip-file fileb://$npm_package_config_sendjokesPath/build/index.zip --no-verify-ssl",
    "deploy:win": "npm run build && npm run zip:win && npm run push-to-aws:win",
    "deploy:dadjokesbot:mac": "npm run build:dadjokesbot && npm run zip:dadjokesbot:mac && npm run push-to-aws:dadjokesbot:mac",
    "deploy:sendjokes:mac": "npm run build:sendjokes && npm run zip:sendjokes:mac && npm run push-to-aws:sendjokes:mac"
  },
  "author": "perioad",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/types": "^3.329.0",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^20.2.1",
    "esbuild": "0.17.19",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.335.0",
    "@aws-sdk/client-lambda": "^3.421.0",
    "@aws-sdk/lib-dynamodb": "^3.335.0",
    "grammy": "^1.17.2",
    "lodash-es": "^4.17.21",
    "openai": "^3.2.1"
  }
}
